{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Mewo Explorer",
  "version": "0.1.0",
  "identifier": "com.mewo.explorer",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Mewo Explorer",
        "width": 1200,
        "height": 600,
        "minWidth": 500,
        "maximized": true,
        "resizable": true,
        "fullscreen": false,
        "shadow": true,
        "center": true,
        "theme": "Light"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.ico"
    ]
  }
}
